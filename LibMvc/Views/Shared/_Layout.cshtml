<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Libreria</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="assets/css/main.css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
        <!-- Wrapper -->

       
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <!-- Header -->
                <header id="header" class="alt">
                    @Html.ActionLink("Libreria", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                </header>
                <!-- Nav -->
                <nav id="nav" white-space: nowrap>
                    <ul>
                        <li><a href="/Proveedores" class="active">Proveedores</a></li>
                        <li><a href="/Pedidos"class="active">Pedidos</a></li>
                        <li><a href="/Usuarios"class="active">Usuarios</a></li>
                    </ul>
                </nav>
            </div>

    </div>
        </div>

    <div class="container body-content">
        <br /><br /> <br /><br />
        @RenderBody()
        <hr />


        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>